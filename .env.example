# FlyRely API Configuration
# Copy this to .env and fill in your values

# Weather API Configuration
# Option 1: Tomorrow.io (recommended for aviation)
# Get API key at: https://www.tomorrow.io/weather-api/
WEATHER_API_PROVIDER=tomorrow
WEATHER_API_KEY=your_tomorrow_io_api_key_here

# Option 2: OpenWeatherMap
# Get API key at: https://openweathermap.org/api
# WEATHER_API_PROVIDER=openweathermap
# WEATHER_API_KEY=your_openweathermap_api_key_here

# Server Configuration (optional)
# HOST=0.0.0.0
# PORT=8000
